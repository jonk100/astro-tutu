---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2><span>&rarr;</span>
			{title}
			<span></span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.25rem;
		background-color: rgba(221, 240, 217, 0.637);/*- - - - - BORDER for the card */
		background-image: none;
		background-size: 400%;
		border-radius: 0.6rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

	.link-card > a {
		width: 100%;
		text-decoration: none; /* - -- - - - - - - - -  decorates all text in the card */
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: #edd6ff; /* - - - - - - - - - - - - -  FONT COLOR for the CARD TITLE */
		background-color: rgb(56, 104, 62); /*- - - BG color for the card */
		opacity: 0.8;
	}
	h2 {
		margin: 0;
    padding: -5px 0px 0px 0px; /* - -- - - - - - - - -  top-right-bottom-left */
		font-size: 1.55rem;
    text-align: start;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    text-decoration: none; /* - -- - - - - - - - -  decorates just the header */
	}
	p {
		margin-top: 0rem;
		margin-bottom: 0;
    font-size:small;
    text-align: start;
    text-decoration: none;
		color: #ebebeb; /* - - - - - - - - - - - - -  FONT COLOR for the card DESCRIPTION */
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
</style>
